{
  "name": "digital-kudos-wall-backend",
  "version": "1.0.0",
  "description": "Node.js Express backend API for Digital Kudos Wall",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start:test": "NODE_ENV=test tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathIgnorePatterns=integration .builder.ts --coverage --watchAll=false",
    "test:integration": "DATABASE_URL=\"file:./test.db\" npx prisma migrate deploy && DATABASE_URL=\"file:./test.db\" jest --testPathPattern=integration --runInBand",
    "test:component": "jest --testPathPattern=component",
    "test:contract": "jest --testPathPattern=contract --runInBand",
    "lint": "eslint . --ext .ts",
    "lint:check": "eslint . --ext .ts --quiet",
    "prettier": "prettier --write .",
    "lint:fix": "eslint . --ext .ts --fix",
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "nodemailer": "^7.0.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^15.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.0",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prisma": "^6.13.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "api",
    "backend",
    "kudos"
  ],
  "author": "",
  "license": "MIT"
}